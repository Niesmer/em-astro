---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title></title>
    <ClientRouter transition:animate={"fade"} />
  </head>
  <body>
    <slot />
  </body><script>
    export let mobile = window.innerWidth < 768;
    window.addEventListener("resize", () => {
      mobile = window.innerWidth < 768;
    });
    function updateCustomReferrer() {
      sessionStorage.setItem("customReferrer", window.location.pathname);
    }

    // Update on initial load
    updateCustomReferrer();

    // Update on back/forward navigation
    window.addEventListener("popstate", updateCustomReferrer);
  </script>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
